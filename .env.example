# Ferrumyx Environment Configuration
# Copy to .env and fill in values

# Database
DATABASE_URL=postgres://ferrumyx:ferrumyx@localhost:5432/ferrumyx

# LLM API Keys (choose one or more)
OPENAI_API_KEY=sk-...
ANTHROPIC_API_KEY=sk-ant-...
POE_API_KEY=...

# PubMed API (optional, for higher rate limits)
PUBMED_API_KEY=

# Europe PMC API (optional)
EUROPEPMC_API_KEY=

# DepMap Data Path
DEPMAP_DATA_PATH=./data/depmap

# Logging
RUST_LOG=info,ferrumyx=debug
